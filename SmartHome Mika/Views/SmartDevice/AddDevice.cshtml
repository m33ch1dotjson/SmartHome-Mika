@model SmartHome_Mika.Models.AddDeviceViewModel

<h2>Nieuw SmartDevice toevoegen</h2>

<form asp-action="AddDevice" method="post">
    <div class="form-group">
        <label>Naam</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ruimte</label>
        <select asp-for="Room" class="form-control">
            @foreach (var ruimte in Enum.GetValues(typeof(SmartHome_Mika.Models.Room)))
            {
                <option value="@ruimte">@ruimte</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Type apparaat</label>
        <select asp-for="DeviceType" class="form-control">
            <option value="SmartLamp">SmartLamp</option>
            <option value="SmartFridge">SmartFridge</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Toevoegen</button>
</form>
